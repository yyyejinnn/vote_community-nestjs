model User {
    id           Int           @id @default(autoincrement())
    email        String        @unique
    password     String
    nickname     String
    refreshToken RefreshToken?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model RefreshToken {
    token  String @unique
    user   User   @relation(fields: [userId], references: [id])
    userId Int    @unique

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("refresh-tokens")
}
