{
  "rootDir": "./unit",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@vote/common": ["<rootDir>/../../src/common"],
    "^@vote/middleware": ["<rootDir>/../../src/middleware"],
    "^src/(.*)$": "<rootDir>/../../src/$1"
  }
}
